<% content_for :title, "EDIT SEASON" %>

<div style="display: flex; flex-direction: column; gap: 16px;">
  <div style="display: flex; justify-content: space-between; align-items: center;">
    <h2 style="margin: 0; font-size: 14px; font-weight: 600; color: var(--terminal-accent); text-transform: uppercase;">EDIT SEASON</h2>
    <%= link_to admin_season_path(@season), class: "terminal-btn" do %>
      BACK
    <% end %>
  </div>

  <div class="terminal-panel corner-brackets">
    <div class="terminal-panel-header">SEASON INFORMATION</div>
    <div style="padding: 16px 0;">
      <%= form_with model: [:admin, @season], local: true, style: "display: flex; flex-direction: column; gap: 16px;" do |f| %>
        <% if @season.errors.any? %>
          <div class="terminal-alert error">
            <ul style="margin: 0; padding-left: 20px; list-style: disc;">
              <% @season.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="terminal-grid terminal-grid-2" style="gap: 16px;">
          <div style="grid-column: span 2; display: flex; flex-direction: column; gap: 8px;">
            <%= f.label :name, "NAME", class: "terminal-text-muted", style: "font-size: 11px; text-transform: uppercase;" %>
            <%= f.text_field :name, class: "terminal-input" %>
          </div>

          <div style="grid-column: span 2; display: flex; flex-direction: column; gap: 8px;">
            <%= f.label :description, "DESCRIPTION", class: "terminal-text-muted", style: "font-size: 11px; text-transform: uppercase;" %>
            <%= f.text_area :description, rows: 3, class: "terminal-input", style: "resize: vertical; min-height: 80px;" %>
          </div>

          <div style="display: flex; flex-direction: column; gap: 8px;">
            <%= f.label :started_at, "STARTED", class: "terminal-text-muted", style: "font-size: 11px; text-transform: uppercase;" %>
            <%= f.datetime_local_field :started_at, class: "terminal-input" %>
          </div>

          <div style="display: flex; flex-direction: column; gap: 8px;">
            <%= f.label :ended_at, "ENDED", class: "terminal-text-muted", style: "font-size: 11px; text-transform: uppercase;" %>
            <%= f.datetime_local_field :ended_at, class: "terminal-input" %>
          </div>

          <div style="grid-column: span 2; display: flex; align-items: center; gap: 8px;">
            <%= f.check_box :active, style: "width: 16px; height: 16px; accent-color: var(--terminal-accent);" %>
            <label for="season_active" style="color: var(--terminal-fg); font-size: 12px; text-transform: uppercase;">ACTIVE</label>
          </div>
        </div>

        <div style="display: flex; justify-content: flex-end; gap: 12px; padding-top: 16px; border-top: 1px solid var(--terminal-panel-border);">
          <%= link_to "CANCEL", admin_season_path(@season), class: "terminal-btn" %>
          <%= f.submit "SAVE CHANGES", class: "terminal-btn primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
